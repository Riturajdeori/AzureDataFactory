					"escapeChar": "\\",
					"firstRowAsHeader": true,
					"quoteChar": "\""
				},
				"schema": [
					{
						"name": "data begDate",
						"type": "String"
					},
					{
						"name": "Region_ID",
						"type": "String"
					},
					{
